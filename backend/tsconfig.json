{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "stream/web": ["./node_modules/@types/node/stream/web.d.ts"]
    }
  },
  "include": [
    "ai.ts",
    "auth.ts",
    "dailyGameStore.ts",
    "db.ts",
    "game.ts",
    "prompts.ts",
    "rawg.ts",
    "rawgDetails.ts",
    "gameType.ts",
    "server.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*Mock.ts",
    "__tests__",
    "jest.config.ts"
  ]
}
